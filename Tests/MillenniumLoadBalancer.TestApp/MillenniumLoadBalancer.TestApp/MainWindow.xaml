<Window x:Class="MillenniumLoadBalancer.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MillenniumLoadBalancer.TestApp"
        xmlns:vm="clr-namespace:MillenniumLoadBalancer.TestApp.ViewModels"
        mc:Ignorable="d"
        Title="Load Balancer Test App" Height="800" Width="1200">
    <Window.Resources>
        <local:StatusToColorConverter x:Key="StatusToColorConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <TabControl Margin="10">
        <!-- Main Tab -->
        <TabItem Header="Main">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Backend Simulators Section -->
                <GroupBox Grid.Row="0" Header="Backend Simulators" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Add Backend Controls -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Address:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding NewBackendAddress}" Width="120" Margin="0,0,15,0"/>
                    <Label Content="Port:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding NewBackendPort}" Width="80" Margin="0,0,15,0"/>
                    <CheckBox Content="Enable TLS" IsChecked="{Binding NewBackendEnableTls}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Label Content="Response:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding NewBackendResponse}" Width="150" Margin="0,0,15,0"/>
                    <Label Content="Response Delay (ms):" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding NewBackendResponseDelay}" Width="80" Margin="0,0,15,0"/>
                    <Button Content="Add Backend" Click="AddBackend_Click" Padding="10,5"/>
                </StackPanel>

                <!-- Backends List -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding Backends}" 
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="150"/>
                        <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="80"/>
                        <DataGridCheckBoxColumn Header="TLS" Binding="{Binding EnableTls, UpdateSourceTrigger=PropertyChanged}" Width="60" IsReadOnly="False"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        <DataGridTextColumn Header="Connections" Binding="{Binding ConnectionCount}" Width="100"/>
                        <DataGridTextColumn Header="Response" Binding="{Binding Response, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False"/>
                        <DataGridTextColumn Header="Response Delay (ms)" Binding="{Binding ResponseDelay, UpdateSourceTrigger=PropertyChanged}" Width="120" IsReadOnly="False"/>
                        <DataGridTemplateColumn Header="Actions" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Click="ToggleBackend_Click" 
                                                Tag="{Binding}"
                                                Padding="5,2" 
                                                Margin="0,0,5,0"
                                                MinWidth="60">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Content" Value="Start"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                            <Setter Property="Content" Value="Stop"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button Content="Remove" 
                                                Click="RemoveBackend_Click" 
                                                Tag="{Binding}"
                                                Padding="5,2"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Load Balancer Configuration -->
        <GroupBox Grid.Row="1" Header="Load Balancer Configuration" Margin="0,0,0,10" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Label Content="Address:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Text="{Binding LoadBalancerAddress}" Width="120" Margin="0,0,15,0"/>
                <Label Content="Port:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Text="{Binding LoadBalancerPort}" Width="80"/>
            </StackPanel>
        </GroupBox>

        <!-- Requests Section -->
        <GroupBox Grid.Row="2" Header="Requests" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Add Request Controls -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Message:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding NewRequestMessage}" Width="300" Margin="0,0,15,0"/>
                    <CheckBox Content="Enable TLS" IsChecked="{Binding RequestEnableTls}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="Add Request" Click="AddRequest_Click" Padding="10,5" Margin="0,0,20,0"/>
                    <Label Content="Bulk Add:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Label Content="Count:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding BulkRequestCount}" Width="60" Margin="0,0,10,0"/>
                    <Button Content="Add Numbered Requests" Click="AddBulkRequests_Click" Padding="10,5"/>
                </StackPanel>

                <!-- Requests List -->
                <ListView Grid.Row="1" ItemsSource="{Binding Requests}" Margin="0,0,0,10">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5" Margin="0,2">
    <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Message, Status, and Response -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="Message: " FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Message}" Margin="5,0,0,0"/>
                                        <TextBlock Text=" | " Margin="10,0"/>
                                        <TextBlock Text="Status: " FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Status}" Margin="5,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                            <Setter Property="Foreground" Value="Gray"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Sending">
                                                            <Setter Property="Foreground" Value="Orange"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Success">
                                                            <Setter Property="Foreground" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                            <Setter Property="Foreground" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text=" | " Margin="10,0"/>
                                        <TextBlock Text="Response: " FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Response}" TextWrapping="Wrap" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- Timestamps -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                                        <TextBlock Text="Sent: " FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{Binding SentTime, StringFormat='{}{0:HH:mm:ss.fff}'}" FontSize="10" Foreground="Gray" Margin="0,0,15,0"/>
                                        <TextBlock Text="Received: " FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{Binding ReceivedTime, StringFormat='{}{0:HH:mm:ss.fff}'}" FontSize="10" Foreground="Gray" Margin="0,0,15,0"/>
                                        <TextBlock Text="Response Time: " FontSize="10" Foreground="Gray"/>
                                        <TextBlock Text="{Binding ResponseTime, StringFormat='{}{0:ss\\.fff}ms', TargetNullValue='--'}" FontSize="10" Foreground="Gray"/>
                                    </StackPanel>
                                    
                                    <!-- Remove Button -->
                                    <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" 
                                            Content="Remove" 
                                            Click="RemoveRequest_Click" 
                                            Tag="{Binding}"
                                            Padding="5,2"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Margin="5,0,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button Content="Send All" Click="SendAllRequests_Click" Padding="10,5" Margin="0,0,10,0"/>
                    <Button Content="Clear All" Click="ClearAllRequests_Click" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </GroupBox>
            </Grid>
        </TabItem>
        
        <!-- Trace Tab -->
        <TabItem Header="Trace">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="Clear Trace" Click="ClearTrace_Click" Padding="10,5" Margin="0,0,10,0"/>
                </StackPanel>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding TraceService.TraceLines}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11" Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
    </Grid>
        </TabItem>
    </TabControl>
</Window>
